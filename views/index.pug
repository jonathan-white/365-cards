extends layout

block content
  .nav-menu
    ul(class='menu')
      li(class="menu-item active")
        a(href='/cards') Cards
      li(class="menu-item")
        a(href='/get-involved') Get Involved
  .search-container
    .search-bar
      input(id="search", class="search-box",type="search", name="search-box", placeholder="Find a card...")
  .container-fluid
    div(class='row images-container', id='img-container')
    div(class='row more-to-come') Stay tuned next week for more!

  include footer.pug

  .overlay
    .click-background-to-close
    .selected-image-container
      .selected-image-holder
        img(id='selected-image' src='' alt='Selected Image')
      .selected-image-description
        .description-title
        .description-text
        .description-date
      div(class='nav-button prev' title='previous')
        i(class='fas fa-arrow-circle-left')
      div(class='nav-button next' title='next')
        i(class='fas fa-arrow-circle-right')
    #close-overlay(class='btn-close-overlay' title='close')
      i(class='fas fa-times-circle')


  script(src='/javascripts/cardManager.js')